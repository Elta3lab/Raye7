<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to image_tag("raye72.png", size: "60x30", alt: "Raye7 logo", class: "logog"), root_path %>
        <%= link_to "Raye7", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Places", places_path %></li>
            <% if logged_in? %>
            <li><%= link_to "Profile", current_user  %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% if current_user.role == 'Driver' %>
                <li><%= link_to "Create Trip", createtrip_path %></li>
                <% end %>
                <% if current_user.role == 'Passenger' %>
                <li><%= link_to "Create Pickup", createpickup_path %></li>
                <% end %>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
            <% else %>
              <li><%= link_to "Sign up", signup_path %></li>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
</header>